function hPaket_AnyClick()
{
  if (any_click_move(231, 142, eDirectionUp))
	{
		if (UsedAction(eActWalkTo))
		{
		//	Wait(5);
		}
		else if (UsedAction(eActLookAt))
		{
			Wait(5);
			player.Say("'An Dave Miller'");
      player.FaceDirection(eDirectionUp);
      player.Say("Das ist wohl eine Falschlieferung.");
		}
    else if (UsedAction(eActOpen))
    {
      Wait(5);
      oPaket.Visible = true;
      hPaket.Enabled = false;
      PlaySound(66);
      
      if(paket_da)
      {
        Wait(15);
        player.Say("Da ist eine Bowlingkugel drin.");
        PlaySound(4);
        player.AddInventory(iBowling);
        paket_da = false;
      }
    }
        else if (UsedAction(eActPickUp))
    {
      Wait(5);
      player.Say("Das ist zu groß zum mitnehmen.");
    }
    else if (UsedAction(eActClose))
    {
      Wait(5);
      player.Say("Das ist schon zu.");
    }
    else if (UsedAction(eActUseInventory))
    {
      Wait(5);
      player.Say("Es gibt bestimmt einen einfacheren Weg das zu öffnen.");
    }
    else Unhandled();
  }
}

