bool schwarz_da = true;

function room_Load()
{
  Door[eTuerKammer].Init(oTuer01, hTuer01);
  
  if(lueftung_offen)
  {
    oLueftung.Visible = true;
    if(schwarz_da)
      oSchwarz.Visible = true;
      
    oBowling.Visible = true;
    oGitter.Visible = true;
    oGitter.Clickable = false;
  }
  
  StopMusic();
  PlayMusic(19);
}

